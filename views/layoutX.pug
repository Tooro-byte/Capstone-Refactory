doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Young4Chicks Initiative 

    //- Google Fonts
    link(href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet")

    //- Bootstrap CSS
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css")

    //- Custom Stylesheets
    link(href="/Styles/signup.css" rel="stylesheet")

    //- Allow child templates to inject head content like <style> or additional <link> tags
    block head

  body
    //- HEADER with NAVBAR
    header
      nav.navbar.navbar-expand-lg.navbar-light.bg-warning
        .container-fluid
          //- Logo and Title
          a.navbar-brand.d-flex.align-items-center(href="/index")
            img(src="/Images/logo.jpeg", alt="Chick Farm App Logo", style="height: 50px; border-radius: 50%;")
            span.ms-2.fw-bold.text-success.fs-4 Young4Chicks

          //- Mobile toggle button
          button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav")
            span.navbar-toggler-icon

          //- Navbar links
          #navbarNav.collapse.navbar-collapse.justify-content-end
            ul.navbar-nav.align-items-center
              li.nav-item
                a.nav-link.active(href="/index") Home
              li.nav-item
                a.nav-link(href="/reports") Reports 
              li.nav-item
                a.nav-link(href="/products") Products
              li.nav-item
                a.btn.btn-success.ms-3(href="/messages") Messages 
              li.nav-item
                a.btn.btn-outline-primary.ms-2(href="/signup") Register Farmer 
              li.nav-item
                a.btn.btn-success.ms-3(href="/messages") Returned 

    //- Page content block - this is where the main content of child templates goes
    block content

    //- Global Modal (used across pages if needed)
    div#confirmationModal.modal.fade(tabindex='-1', aria-labelledby='modalLabel', aria-hidden='true')
      .modal-dialog.modal-dialog-centered
        .modal-content
          //- .modal-header
          //-   h5#modalLabel.modal-title Request Submitted!
          //-   button.btn-close(type='button', data-bs-dismiss='modal', aria-label='Close')
          //- .modal-body
          //-   p Your chick request has been successfully submitted. Weâ€™ll get back to you shortly!
          //- .modal-footer
          //-   button.btn.btn-success(type='button', data-bs-dismiss='modal') OK

    //- New block for page-specific modals (like your #addStockModal)
    block modals

    //- Bootstrap JS at end of body for performance
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")

    //- New block for page-specific JavaScript files
    block scripts