extends layout

block content
  .signup-container(style="background-image: url('/Images/WhatsApp5.jpg');")
    .card
      h2.signup-title Sign Up to Young4Chicks
      form(action="/signup" method="POST")
        .form-group
          label(for="name") Full Name
          input#name(type="text" name="name" placeholder="Enter your full name")
        .form-group
          label(for="email") Email
          input#email(type="email" name="email" placeholder="Enter your email")
        .form-group
          label(for="password") Password
          input#password(type="password" name="password" placeholder="Create a password" )
        .form-group
          label(for="phone") Phone Number
          input#phone(type="tel" name="phone" placeholder="Enter your phone number")
        .form-group
          label(for="nin") NIN Number
          input#nin(type="text" name="nin" placeholder="Enter your NIN")
        .form-group
          label(for="role") Select Role
          select#role(name="role" )
            option(value="" disabled selected) -- Select your role --
            option(value="farmer") Young Farmer
            option(value="SalesRep") Sales Representative
            option(value="brooderManager") Brooder Manager
        .form-group
          label(for="recommenderName") Recommender Name (For Farmers)
          input#recommenderName(type="text" name="recommenderName" placeholder="Enter recommender name")
        .form-group
          label(for="recommenderNIN") Recommender NIN (For Farmers)
          input#recommenderNIN(type="text" name="recommenderNIN" placeholder="Enter recommender NIN")
        .form-group
          button.btn(type="submit") Create Account
      p.text-center.text-sm.text-gray-600.mt-6 Already have an account? 
        a(href="/login" class="text-primary hover:text-primary-dark font-semibold") Login