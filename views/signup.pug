extends layout

block content
  .signup-container
    .card
      h2.signup-title Sign Up to Young4Chicks

      form(action="/signup" method="POST")
        .form-group
          label(for="name") Full Name
          input#name(type="text", name="name", required)

        .form-group
          label(for="email") Email
          input#email(type="email", name="email", required)

        .form-group
          label(for="password") Password
          input#password(type="password", name="password", required)

        .form-group
          label(for="phone") Phone Number
          input#phone(type="tel", name="phone", required)

        .form-group
          label(for="nin") NIN Number
          input#nin(type="text", name="nin", required)

        .form-group
          label(for="role") Select Role
          select#role(name="role", required)
            option(value="" disabled selected) -- Select your role --
            option(value="farmer") Young Farmer
            option(value="salesRep") Sales Representative
            option(value="brooderManager") Brooder Manager

        .form-group
          label(for="recommenderName") Recommender Name (For Farmers)
          input#recommenderName(type="text", name="recommenderName")

        .form-group
          label(for="recommenderNIN") Recommender NIN (For Farmers)
          input#recommenderNIN(type="text", name="recommenderNIN")

        .form-group
          button.btn(type="submit") Create Account

      p.text-center.text-sm.text-gray-600.mt-6 Already have an account? #[a(href="/login" class="text-purple-600 hover:text-purple-800 font-semibold") Login]