                    .feed-price UGX 43,000 per bag
                  .feed-check ‚úì

            .form-grid
              .form-group
                label.form-label(for="feedQuantity") Number of Bags
                .input-wrapper
                  .input-icon üì¶
                  select#feedQuantity.form-select(name="feedQuantity", required)
                    option(value="") Select quantity
                    option(value="1") 1 Bag
                    option(value="2") 2 Bags (Maximum)

              .form-group
                label.form-label(for="urgency") Urgency Level
                .input-wrapper
                  .input-icon ‚ö°
                  select#urgency.form-select(name="urgency", required)
                    option(value="") Select urgency
                    option(value="normal") Normal (7-10 days)
                    option(value="urgent") Urgent (3-5 days)
                    option(value="emergency") Emergency (1-2 days)

              .form-group.full-width
