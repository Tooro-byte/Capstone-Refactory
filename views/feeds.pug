          .header-text
            h1.feeds-title Request Animal Feeds
            p.feeds-subtitle Get quality feeds for your chicks - 2 bags per farmer, payable after 2 months
        .header-stats
          .stat-item
            .stat-number 2
            .stat-label Bags Maximum
          .stat-item
            .stat-number 60
            .stat-label Days to Pay
          .stat-item
            .stat-number Free
            .stat-label Initial Cost

      .feeds-form-container
        .form-progress
          .progress-step.active
            .step-number 1
            .step-label Farmer Info
          .progress-line
          .progress-step
            .step-number 2
            .step-label Feed Details
          .progress-line
          .progress-step
            .step-number 3
            .step-label Confirmation

        form#feedsRequestForm.feeds-form(action="/feedsReq", method="POST")
          .form-section.active(data-section="1")
            .section-header
              .section-icon üë§
              .section-title Farmer Information
              .section-subtitle Verify your farmer details

            .form-grid
              .form-group.full-width
                label.form-label(for="farmerName") Full Name
                .input-wrapper
                  .input-icon üë§
                  input#farmerName.form-input(
                    type="text", 
                    name="farmerName", 
                    placeholder="Enter your full name",
                    required
                  )
