                input#growerFeed.feed-checkbox(type="checkbox", name="feedTypes", value="grower")
                label.feed-card-label(for="growerFeed")
                  .feed-icon üêî
                  .feed-info
                    .feed-name Grower Feed
                    .feed-description For chicks 9-18 weeks old
                    .feed-price UGX 42,000 per bag
                  .feed-check ‚úì

              .feed-type-card
                input#layerFeed.feed-checkbox(type="checkbox", name="feedTypes", value="layer")
                label.feed-card-label(for="layerFeed")
                  .feed-icon ü•ö
                  .feed-info
