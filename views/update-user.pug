extends layout

block content
  .signup-container
    .card
      h2.signup-title üë®‚Äçüåæ UPDATE YOUNG FARMER

      // Corrected line: Removed the duplicate 'action='
      form(method="POST" action="/updateuser?id=" + user._id)
        .form-group
          label(for="name") Full Name
          input#name(type="text" name="name" value=user.name)

        .form-group
          label(for="email") Email
          input#email(type="email" name="email" value=user.email)

        .form-group
          label(for="password") Password
          input#password(type="password" name="password")

        .form-group
          label(for="phone") Phone Number
          input#phone(type="tel" name="phone" value=user.phone)

        .form-group
          label(for="nin") NIN Number
          input#nin(type="text" name="nin" value=user.nin)

        .form-group
          label(for="role") Select Role
          select#role(name="role")
            option(value="" disabled selected) -- Select your role --
            option(value="farmer" selected=user.role==='farmer') Young Farmer
            option(value="salesRep" selected=user.role==='salesRep') Sales Representative
            option(value="brooderManager" selected=user.role==='brooderManager') Brooder Manager

        .form-group
          label(for="recommenderName") Recommender Name (For Farmers)
          input#recommenderName(type="text" name="recommenderName" value=user.recommenderName)

        .form-group
          label(for="recommenderNIN") Recommender NIN (For Farmers)
          input#recommenderNIN(type="text" name="recommenderNIN" value=user.recommenderNIN)

        .form-group
          button.btn(type="submit") Update Farmer Account

      p.text-center.text-sm.text-gray-600.mt-6 Already have an account? #[a(href="/login" class="text-purple-600 hover:text-purple-800 font-semibold") Login]