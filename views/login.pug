extends layout

block head
  link(href="/Styles/login.css" rel="stylesheet")
  link(href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet")
  script(src="/vanilla-js/loginValidation.js" defer)

block content

  //- Background Elements
  .background-container
    .background-overlay
    .blob.blob-1
    .blob.blob-2
    .blob.blob-3

  //- Main Login Content
  main.login-main
    .container
      .row.justify-content-center.align-items-center.min-vh-100
        .col-12.col-md-6.col-lg-5.col-xl-4
          //- Login Card
          .login-card
            .login-header.text-center.mb-4
              .user-icon.mx-auto.mb-3
                i.bi.bi-person-circle
              h2.login-title.mb-2 Welcome Back
              p.login-subtitle.text-muted Login to your Young4Chicks account

            //- Login Form
            form#loginForm.login-form(action="/login", method="POST")
              .form-group.mb-3
                label.form-label(for="email") Email Address
                .input-wrapper
                  i.bi.bi-envelope.input-icon
                  input#email.form-control.custom-input(type="email", name="email", placeholder="Enter your email")
                .error-message#emailError

              .form-group.mb-3
                label.form-label(for="password") Password
                .input-wrapper
                  i.bi.bi-lock.input-icon
                  input#password.form-control.custom-input(type="password", name="password", placeholder="Enter your password")
                  .password-toggle
                    i.bi.bi-eye.eye-icon
                .error-message#passwordError

              .form-options.d-flex.justify-content-between.align-items-center.mb-4
                .form-check
                  input#remember.form-check-input.custom-checkbox(type="checkbox", name="remember")
                  label.form-check-label(for="remember") Remember me
                a.forgot-password(href="/forgot-password") Forgot password?

              button.btn.login-btn.w-100.mb-4(type="submit") Sign In

            //- Divider
            .divider.mb-4
              .divider-line
              span.divider-text Or continue with
              .divider-line

            //- Social Login
            .social-login.mb-4
              a.social-btn.google-btn.d-flex.align-items-center.justify-content-center.mb-3(href="/auth/google")
                .social-icon.me-2
                  svg(width="20", height="20", viewBox="0 0 24 24")
                    path(fill="#4285F4", d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z")
                    path(fill="#34A853", d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z")
                    path(fill="#FBBC05", d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z")
                    path(fill="#EA4335", d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z")
                span Continue with Google

              a.social-btn.facebook-btn.d-flex.align-items-center.justify-content-center(href="/auth/facebook")
                .social-icon.me-2
                  svg(width="20", height="20", fill="#1877F2", viewBox="0 0 24 24")
                    path(d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z")
                span Continue with Facebook

            //- Sign Up Link
            .signup-link.text-center
              p.mb-0.text-muted Don't have an account? 
                a.signup-link-text(href="/signup") Sign up here